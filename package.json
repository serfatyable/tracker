{
  "name": "tracker",
  "version": "1.0.0",
  "description": "Tracker follows Tracker_Developer_Guide_v1.0.md",
  "main": "next.config.js",
  "scripts": {
    "dev": "next dev",
    "dev:clean": "pkill -f 'next dev' || true && rm -rf .next && next dev",
    "build": "next build",
    "build:clean": "rm -rf .next && next build",
    "start": "next start",
    "emulators": "firebase emulators:start",
    "dev:emulators": "cross-env NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true next dev",
    "dev:all": "concurrently \"npm:emulators\" \"npm:dev:emulators\"",
    "dev:emu": "npm run dev:all",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:light": "vitest run --pool=threads --poolOptions.threads.maxThreads=1",
    "test:mem": "cross-env NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=threads --poolOptions.threads.maxThreads=1",
    "test:ci": "vitest run --pool=threads --poolOptions.threads.maxThreads=1",
    "check": "pnpm typecheck && pnpm lint",
    "clean": "rm -rf .next .turbo node_modules && pnpm i",
    "analyze": "ANALYZE=true next build",
    "build:analyze": "pnpm build && pnpm analyze",
    "perf": "pnpm build && pnpm start",
    "audit:deps": "pnpm audit --audit-level moderate",
    "audit:security": "pnpm audit --audit-level high"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serfatyable/tracker.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/serfatyable/tracker/issues"
  },
  "homepage": "https://github.com/serfatyable/tracker#readme",
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "engines": {
    "node": ">=20 <23"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@heroicons/react": "2.2.0",
    "@tailwindcss/postcss": "4.1.14",
    "autoprefixer": "10.4.20",
    "clsx": "^2.1.1",
    "firebase": "11.0.2",
    "firebase-admin": "^13.5.0",
    "i18next": "23.15.2",
    "next": "15.5.4",
    "postcss": "8.4.47",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "15.0.3",
    "reactflow": "^11.11.4",
    "tailwindcss": "4.0.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.14.0",
    "@next/eslint-plugin-next": "15.0.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.12.0",
    "@types/react": "18.3.10",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-boundaries": "4.2.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.0",
    "globals": "15.12.0",
    "husky": "9.1.7",
    "jsdom": "27.0.0",
    "lint-staged": "15.2.10",
    "prettier": "3.6.2",
    "typescript": "5.6.3",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings=0 --fix"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
